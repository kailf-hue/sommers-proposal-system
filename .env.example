# ============================================================================
# Sommer's Sealcoating Proposal System - Environment Variables
# Copy this file to .env.local and fill in your values
# ============================================================================

# ============================================================================
# REQUIRED - Core Services
# ============================================================================

# Supabase - Database & Backend
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Clerk - Authentication
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# Stripe - Payments
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# EMAIL - Resend
# ============================================================================
RESEND_API_KEY=re_your-resend-api-key
VITE_FROM_EMAIL=Sommer's Sealcoating <noreply@sommersealcoating.com>
VITE_REPLY_TO_EMAIL=info@sommersealcoating.com

# ============================================================================
# SMS - Twilio
# ============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# AI Services
# ============================================================================

# HuggingFace - Mistral-7B for AI Assistant
VITE_HUGGINGFACE_API_KEY=hf_your-huggingface-api-key

# Claude API (Optional - for advanced AI features)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ============================================================================
# STORAGE - Cloudflare R2
# ============================================================================
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=sommers-proposal-assets
VITE_R2_PUBLIC_URL=https://images.sommersealcoating.com

# ============================================================================
# WEATHER API
# ============================================================================
VITE_OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# ============================================================================
# INTEGRATIONS
# ============================================================================

# QuickBooks
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REDIRECT_URI=https://app.sommersealcoating.com/integrations/quickbooks/callback

# Google Calendar
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Zapier
ZAPIER_WEBHOOK_SECRET=your-zapier-secret

# ============================================================================
# APPLICATION URLs
# ============================================================================
VITE_APP_URL=https://app.sommersealcoating.com
VITE_API_URL=https://api.sommersealcoating.com
VITE_PORTAL_URL=https://portal.sommersealcoating.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EMAIL_FOLLOWUPS=true
VITE_ENABLE_CLIENT_PORTAL=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_VIDEO_PROPOSALS=true
VITE_ENABLE_WEATHER=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_MULTI_LANGUAGE=true

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# ============================================================================
# WHITE-LABEL / MULTI-TENANT
# ============================================================================
VITE_DEFAULT_BRAND_NAME=Sommer's Sealcoating
VITE_DEFAULT_BRAND_COLOR=#C41E3A
VITE_DEFAULT_SUPPORT_EMAIL=support@sommersealcoating.com

# ============================================================================
# DEVELOPMENT
# ============================================================================
NODE_ENV=development
VITE_DEBUG=false
